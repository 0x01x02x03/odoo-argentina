        <t t-set="document_number" t-value="o.name"/>
    </t>

    <t t-if="print_code">
        <t t-set="afip_code" t-value="'Code xx'"/>
    </t>

    <t t-if="print_letter">
        <t t-set="document_letter" t-value="'X'"/>
    </t>
    <t t-if="print_title">
        <t t-set="document_title" t-value="'Recibo'"/>
    </t>        

