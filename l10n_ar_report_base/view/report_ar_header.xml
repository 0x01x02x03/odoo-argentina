<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="argentian_header" name="Argentinian Header">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"/>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"/>
    </t>
    
    <div class="header">
        <div class="row">
            <div class="col-xs-5">
                <div t-att-style="'min-height: %imm;' % logo_height">
                    <img t-if="report.print_logo =='company_logo'" t-att-src="'data:image/png;base64,%s' % company.logo" t-att-style="'max-height: %imm;' % logo_height"/>
                    <img t-if="report.print_logo =='specified_logo' and report.logo" t-att-src="'data:image/png;base64,%s' % report.logo" t-att-style="'max-height: %imm;' % logo_height"/>
                </div>
                <div t-att-style="'min-height: %imm;' % company_info_height" t-if="print_header">
                    <table>
                        <tr><td><b><span t-field="company.partner_id"/></b></td></tr>
                        <tr><td><span t-field="company.partner_id.street"/></td></tr>
                        <tr><td>(<span t-field="company.partner_id.zip"/>) <span t-field="company.partner_id.city"/> - <span t-field="company.state_id"/> - <span t-field="company.country_id"/></td></tr>
                        <tr><td>Tel. <span t-field="company.partner_id.phone"/></td></tr>
                        <tr><td><b><span t-field="company.partner_id.email"/></b></td></tr>
                        <tr><td><b><div t-field="company.website" style="border-bottom: 1px solid black;"/></b></td></tr>
                        <tr><td><b><div t-field="company.responsability_id"/></b></td></tr>
                    </table>
                </div>
            </div>
            <div class="col-xs-2 text-center">
                <table style="text-align:center;margin: auto;margin-top:15mm">
                    <tr><td t-if="document_letter"><h1><span style="border: 1px solid;
padding: 2mm;" t-raw="document_letter"/></h1></td></tr>
                    <tr><td><h5>Código N</h5><span t-raw="afip_code"/></td></tr>
                    <tr><td style="width: 22mm;"><span t-raw="legend"/></td></tr>
                </table>
            </div>
            <div class="col-xs-5">
                <div t-att-style="'min-height: %imm;' % title_height">
                    <table>
                        <tr><td><h2>
                            <t>
                                <span t-raw="document_title"/>
                            </t>
                        </h2></td></tr>
                    </table>
                </div>
                <div t-att-style="'min-height: %imm;' % page_info_height">
                    <table>
                        <tr><td t-if="document_number">Nº: <span t-raw="document_number"/></td></tr>
                        <!-- TODO ver como formatear esta fecha -->
                        <tr><td>Fecha: <span t-raw="document_date"/></td></tr>
                        <tr><td t-if="print_numbering">Pagina <span class="page"/> de <span class="topage"/></td></tr>
                    </table>
                </div>
                <div t-att-style="'min-height: %imm;' % other_company_info_height" t-if="print_header">
                    <table>
                        <tr><td>CUIT: <span t-field="company.partner_id.formated_vat"/></td></tr>
                        <tr><td>Ing. Brutos: <span t-field="company.iibb"/></td></tr>
                        <tr><td>Inicio de actividades: <span t-field="company.start_date"/></td></tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="argentian_header2">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <div class="header">
        <div class="row">
            <div class="col-xs-3">
                <img t-if="report.print_logo =='company_logo'" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                <img t-if="report.print_logo =='specified_logo' and report.logo" t-att-src="'data:image/png;base64,%s' % report.logo" style="max-height: 45px;"/>
            </div>
            <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
            <div t-if="print_header">
                <div t-field="company.partner_id" 
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        style="border-bottom: 1px solid black;"/>
                <span t-if="company.phone">Tel: <span t-field="company.website"/></span>
                <span t-field="company.email"/>
                <span t-field="company.website"/>
                <span t-if="company.responsability_id">IVA: <span t-field="company.responsability_id.name"/></span>
            </div>

            <div t-if="print_title and o.journal_document_class_id.afip_document_class_id">
                <span t-field="o.journal_document_class_id.afip_document_class_id.report_name"/>
            </div>

            <div t-if="print_letter and o.journal_document_class_id.afip_document_class_id">
                <span t-field="o.journal_document_class_id.afip_document_class_id.document_letter_id.name"/>
            </div>
            <div t-if="print_code and o.journal_document_class_id.afip_document_class_id">
                Code N<span t-field="o.journal_document_class_id.afip_document_class_id.afip_code"/>
            </div>
            <span t-raw="legend"/>

            <div t-if="print_number">
                Nº: <span t-field="o.number"/>
            </div>

            <span t-field="o.date_invoice"/>
            
            <div t-if="print_header">
                <span t-if="company.phone">Tel: <span t-field="company.website"/></span>
                CUIT: <span t-field="company.partner_id.formated_vat"/>
                Ing. Brutos: <span t-field="company.iibb"/>
                Inicio de actividades: <span t-field="company.start_date"/>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-xs-offset-7">
                <address t-field="o.partner_id.commercial_partner_id"
                    t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                <span t-field="o.partner_id.vat"/>
            </div>
            <div>
                CUIT: <span t-field="o.partner_id.commercial_partner_id.formated_vat"/>
                <span t-if="o.partner_id.commercial_partner_id.responsability_id">Cond IVA: <span t-field="o.partner_id.commercial_partner_id.responsability_id.name"/></span>
            </div>
            <div>
                Phone: <span t-field="o.partner_id.commercial_partner_id.phone"/>
                Email: <span t-field="o.partner_id.commercial_partner_id.email"/>
                <span t-if="o.partner_id.parent_id">Contact: <span t-field="o.partner_id.name"/></span>                    
            </div>
            <div>
                <span t-if="o.payment_term">Sale Condition: <span t-field="o.payment_term.name"/></span>
                Maturities: 
                <span t-if="print_commercial">Commercial: <span t-field="o.user_id.name"/></span>                    
                Origin: <span t-field="o.origin"/>
                <span t-if="o.partner_id.ref">Customer Code:<span  t-field="o.partner_id.ref"/></span>                   
            </div>
        </div>        
    </div>
</template>
</data>
</openerp>