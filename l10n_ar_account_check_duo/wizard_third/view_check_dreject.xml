<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="account.check_dreject_form_view">
            <field name="name">account.check.dreject.wizard.form</field>
            <field name="model">account.check.dreject</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Deposited Check Reject" col="2" version="7.0">
                    <group>
                        <label string="It will create a Supplier Invoice and a Customer Invoice. If you choose to 'Supplier Expenses' then it will add expenses on Supplier invoices. If you also choose 'Invoice Expenses to Customer' then, it will also add expenses to Customer Invoice" colspan="2"/>                        
                        <field name="reject_date"/>
                        <field name="expense"/>
                        <field name="expense_amount" attrs="{'invisible':[('expense','not in',['invoice_to_customer','record_expenses'])],'required':[('expense','in',['invoice_to_customer','record_expenses'])]}"/>
                        <field name="expense_account" attrs="{'invisible':[('expense','not in',['record_expenses'])],'required':[('expense','in',['record_expenses'])]}"/>
                    </group>    
                    <footer>
                        <button string="Confirm" name="action_dreject" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window
            name="Deposited Check Rejected"
            res_model="account.check.dreject"
            src_model="account.third.check"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_check_dreject"/>

    </data>
</openerp>
