<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report_ar_invoice_document">
    <!-- CONFIGURATIONS -->
    <t t-set="lines_height" t-value="int(lines_height)"/>
    <t t-set="footer_block_height" t-value="int(footer_block_height)"/>
    <t t-set="other_info_height" t-value="int(other_info_height)"/>

    <t t-set="row_border1" t-value="''"/>

    <!-- Seteamos clase de tabla sin border -->
    <t t-set="table_no_border" t-value="'table-no-border'"/>
    <t t-if="print_background">
        <!-- Borramos clase de tabla sin border -->
        <t t-set="table_no_border" t-value="''"/>
        <!-- Toma el estilo de la tabla -->
        <t t-set="row_border1" t-value="'border:1px solid;'"/>
    </t>
    
    <!-- Header Data  -->
    <t t-set="document_date" t-value="o.date_invoice"/>
    <t t-if="print_number">
        <t t-set="document_number" t-value="o.number"/>
    </t>

    <t t-if="print_code">
        <t t-if="o.journal_document_class_id.afip_document_class_id">
            <t set="afip_code" t-value="o.journal_document_class_id.afip_document_class_id.afip_code"/>
        </t>
    </t>

    <t t-if="print_letter">
        <t t-if="o.journal_document_class_id.afip_document_class_id">
            <t set="document_letter" t-value="o.journal_document_class_id.afip_document_class_id.document_letter_id.name"/>
        </t>
    </t>

    <t t-if="print_title">
        <t t-if="o.journal_document_class_id">
            <t t-set="document_title" t-value="o.journal_document_class_id.afip_document_class_id.report_name"/>
        </t>
        <t t-if="not o.journal_document_class_id">
            <t t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                <t t-set="document_title" t-value="'Invoice'"/>
            </t>
            <t t-if="o.type == 'out_invoice' and o.state == 'proforma2'">
                <t t-set="document_title" t-value="'PRO-FORMA'"/>
            </t>
            <t t-if="o.type == 'out_invoice' and o.state == 'draft'">
                <t t-set="document_title" t-value="'Draft Invoice'"/>
            </t>
            <t t-if="o.type == 'out_invoice' and o.state == 'cancel'">
                <t t-set="document_title" t-value="'Cancelled Invoice'"/>
            </t>
            <t t-if="o.type == 'out_refund'">
                <t t-set="document_title" t-value="'Refund'"/>
            </t>
            <t t-if="o.type == 'in_refund'">
                <t t-set="document_title" t-value="'Supplier Refund'"/>
            </t>
            <t t-if="o.type == 'in_invoice'">
                <t t-set="document_title" t-value="'Supplier Invoice'"/>
            </t>
        </t>
    </t>        
    
    <!-- Call header -->
    <t t-call="l10n_ar_report_base.argentian_header">
        <div class="row" t-att-style="row_border1 + 'margin-top:1mm;min-height:%imm;' %(other_info_height)">
            <div class="col-xs-6">
                Cond. Venta:<strong><span t-field="o.payment_term"/></strong><br/>
                Vencimientos:
                <t t-foreach="o.move_id.line_id" t-as="ml">
                    <span t-if="ml.date_maturity">
                        <span t-field="ml.date_maturity"/> - <span t-field="ml.debit" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                    </span><br/>
                </t>
            </div>
            <div class="col-xs-6">
                <t t-if="print_commercial">Comercial: <strong><span t-field="o.user_id.name"/></strong></t><br/>
                Doc. Origen:<strong><span t-field="o.origin"/></strong>
            </div>
        </div>
    </t>
    
    <div class="page">
        <div class="row" t-att-style="row_border1 + 'margin-top:2mm;min-height:%imm;' %(lines_height)">
            <table t-att-class="'table table-ar-items ' + table_no_border">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Imp.</th>
                        <th>P. Lista</th>
                        <th groups="sale.group_discount_per_so_line">%BON.</th>
                        <th groups="sale.group_discount_per_so_line">P. Neto</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line" t-as="l">
                        <td style="max-width:70mm"><span t-raw="l.name[0:108]"/></td>
                        <td style="max-width:17mm;font-size:0.8em">
                            <span t-esc="', '.join(map(lambda x: x.description, l.invoice_line_tax_id))"/>
                        </td>
                        <td>
                            <span t-field="l.printed_price_unit"/>
                        </td>
                        <td groups="sale.group_discount_per_so_line"><span t-field="l.discount"/></td>
                        <td groups="sale.group_discount_per_so_line">
                            <span t-field="l.printed_price_net"/>
                        </td>                        
                        <td>
                            <span t-field="l.quantity"/>
                            <span t-field="l.uos_id"  groups="product.group_uom"/>
                        </td>
                        <td>
                            <span t-field="l.printed_price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="footer">
        <div class="row" t-att-style="'min-height: %imm;' % footer_block_height">
            <div class="col-xs-7" t-att-style="row_border1 + 'min-height: %imm;' % footer_block_height+ 'max-height: %imm;' % footer_block_height">
                <p t-if="o.comment">
                    <b>Comment:</b>
                    <span t-field="o.comment"/>
                </p> 
            </div>                     
            <div class="col-xs-5 pull-right" t-att-style="row_border1 + 'min-height: %imm;' % footer_block_height  + 'max-height: %imm;' % footer_block_height  + 'width:41%;'">
                <table class="table table-ar-totals">
                    <tr>                    
                        <td><b>Subtotal</b></td>
                        <td></td>
                        <td><b><span t-field="o.printed_amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></b></td>
                    </tr>
                    <tr>
                        <td><b>Impuestos</b></td>
                        <td><b>Base</b></td>
                        <td><b>Importe</b></td>
                    </tr>
                    <tr class="taxes" t-foreach="o.printed_tax_ids" t-as="tax_line">
                        <td><span t-field="tax_line.tax_code_id.name"/></td>
                        <td><span t-field="tax_line.base" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
                        <td><span t-field="tax_line.amount" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
                    </tr>
                    <tr class="totals">
                        <td><b>Total</b></td>
                        <td></td>
                        <td><b><span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></b></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</template>

<!-- Printed Invoices -->
<template id="report_ar_invoice">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'l10n_ar_report_invoice.report_ar_invoice_document')"/>
        </t>
    </t>
</template>

<!-- Printed Debit/Credit Notes -->
<template id="report_ar_credit_debit">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'l10n_ar_report_invoice.report_ar_invoice_document')"/>
        </t>
    </t>
</template>

<!-- Other Invoice -->
<template id="report_ar_other_invoice">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'l10n_ar_report_invoice.report_ar_invoice_document')"/>
        </t>
    </t>
</template>

</data>
</openerp>
