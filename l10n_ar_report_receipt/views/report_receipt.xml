        <!-- Borramos clase de tabla sin border -->
        <t t-set="table_no_border" t-value="''"/>
        <!-- Toma el estilo de la tabla -->
        <t t-set="row_border1" t-value="'border:1px solid;'"/>
    </t>

    <!-- Header Data  -->
    <t t-set="document_date" t-value="o.date"/>
