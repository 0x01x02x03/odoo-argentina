<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">l10n_ar.invoice.search</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="number" position="replace">
                    <field name="number" string="Invoice" filter_domain="['|','|','|', '|', ('reference','ilike',self), ('number','ilike',self), ('origin','ilike',self), ('supplier_invoice_number', 'ilike', self), ('partner_id', 'child_of', self)]"/>
                </field>
                <field name="partner_id" position="after">
                    <field name="afip_document_class_id"/>
                </field>
                <group string="Group By">
                    <filter string="Document Type" icon="terp-folder-orange" domain="[]" context="{'group_by':'afip_document_class_id'}"/>
                </group>
            </field>
        </record>

        <record id="invoice_tree" model="ir.ui.view">
            <field name="name">l10n_ar.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="number" position="after">
                    <field name="afip_document_class_id"/>
                    <field name="reference"/>
                </field>
            </field>
        </record>
            
        <record id="view_invoice_form" model="ir.ui.view">
            <field name="name">l10n_ar.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <form>
                    <field name="available_journal_document_class_ids" invisible="1"/>
                    <field name="use_documents" invisible="1"/>
                </form>

                <field name="number" position="attributes">
                    <attribute name="attrs">{'invisible':[('use_documents','=',True)]}</attribute>
                </field>
                <field name="number" position="after">
                    <field name="reference" attrs="{'invisible':[('use_documents','=',False)]}" readonly="1" class="oe_inline"/>
                </field>

                <field name="journal_id" position="after">
                    <field name="journal_document_class_id" attrs="{'invisible':[('use_documents','=',False)],'required':[('use_documents','=',True)]}" domain="[('id','in',available_journal_document_class_ids[0][2])]" on_change="on_change_journal_document_class_id(journal_document_class_id)"/>
                </field>    

                <label string="Draft Refund" position="after">
                        <label string="- Next Number: " attrs="{'invisible': ['|',('reference','!=',False),('state','!=','draft')]}" class="oe_inline"/>
                        <field name="next_invoice_number" attrs="{'invisible': ['|',('reference','!=',False),('state','!=','draft')]}" class="oe_inline"/>
                </label>
           
            </field>
        </record>

        <record id="view_supplier_invoice_form" model="ir.ui.view">
            <field name="name">l10n_ar.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <form>
                    <field name="available_journal_document_class_ids" invisible="1"/>
                    <field name="use_documents" invisible="1"/>
                </form>

                <field name="supplier_invoice_number" position="attributes">
                    <attribute name="attrs">{'required':[('use_documents','=',True)]}</attribute>
                </field>

                
                <!-- We hide reference fields-->
                <label for="reference_type" position="replace"/>
                <xpath expr="//sheet/group/group/div" position="replace"/>

                <field name="number" position="attributes">
                    <attribute name="attrs">{'invisible':[('use_documents','=',True)]}</attribute>
                </field>
                <field name="number" position="after">
                    <field name="reference" attrs="{'invisible':[('use_documents','=',False)]}" readonly="1" class="oe_inline"/>
                </field>
                
                <field name="journal_id" position="after">
                    <field name="journal_document_class_id" attrs="{'invisible':[('use_documents','=',False)],'required':[('use_documents','=',True)]}" domain="[('id','in',available_journal_document_class_ids[0][2])]"/>
                </field>    

            </field>
        </record>

    </data>
</openerp>