            </div>
            <div class="col-xs-6">
                <table t-att-class="'table table-ar-items ' + table_no_border">
                    <thead>
                        <tr>
                            <th>N Cheque</th>
                            <th>Banco</th>
                            <th>Importe</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-foreach="o.voucher_ids" t-as="vo">
                            <t t-foreach="vo.delivered_third_check_ids" t-as="ch">
                                <tr>
                                    <td><span t-field="ch.number"/></td>
                                    <td><span t-field="ch.bank_id.name"/></td>
                                    <td><span t-field="ch.amount"/></td>
                                </tr>
                            </t>
                            <t t-foreach="vo.received_third_check_ids" t-as="ch">
                                <tr>
                                    <td><span t-field="ch.number"/></td>
                                    <td><span t-field="ch.bank_id.name"/></td>
                                    <td><span t-field="ch.amount"/></td>
                                </tr>                                
                            </t>
                            <t t-foreach="vo.issued_check_ids" t-as="ch">
                                <tr>
                                    <td><span t-field="ch.number"/></td>
                                    <td><span t-field="ch.bank_id.name"/></td>
                                    <td><span t-field="ch.amount"/></td>
