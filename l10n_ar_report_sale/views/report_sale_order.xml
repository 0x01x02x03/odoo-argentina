<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report_ar_sale_order_document">    
    <!-- CONFIGURATIONS -->
    <t t-set="lines_height" t-value="138"/>
    <t t-set="footer_block_height" t-value="32"/>
    <t t-set="other_info_height" t-value="18"/>

    <t t-set="row_border1" t-value="''"/>


    <!-- Seteamos clase de tabla sin border -->
    <t t-set="table_no_border" t-value="'table-no-border'"/>
    <t t-if="print_background">
        <!-- Borramos clase de tabla sin border -->
        <t t-set="table_no_border" t-value="''"/>
        <!-- Toma el estilo de la tabla -->
        <t t-set="row_border1" t-value="'border:1px solid;'"/>
    </t>    

    <!-- Header Data  -->
    <t t-set="document_date" t-value="o.date_order"/>
    <t t-if="print_number">
        <t t-set="document_number" t-value="o.name"/>
    </t>

    <t t-if="print_code">
        <t t-set="afip_code" t-value="'Code xx'"/>
    </t>

    <t t-if="print_letter">
        <t t-set="document_letter" t-value="'X'"/>
    </t>
    <t t-if="print_title">
        <t t-set="document_title" t-value="'Presupuesto'"/>
    </t>        

    <t t-call="l10n_ar_report_base.argentian_header">
        <div class="row" t-att-style="row_border1 + 'margin-top:1mm;min-height:%imm;' %(other_info_height)">
            <div class="col-xs-6">
                Cond. Venta:<strong><span t-field="o.payment_term"/></strong><br/>
                Referencia:<strong><span t-field="o.client_order_ref"/></strong>
            </div>
            <div class="col-xs-6">
                <t t-if="print_commercial">Comercial: <strong><span t-field="o.user_id.name"/></strong></t><br/>
                Doc. Origen:<strong><span t-field="o.origin"/></strong>
            </div>
        </div>
    </t>

    <div class="page">
        <div class="row" t-att-style="row_border1 + 'margin-top:2mm;min-height:%imm;' %(lines_height)">
            <table t-att-class="'table table-ar-items ' + table_no_border">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Imp.</th>
                        <th>P. Lista</th>
                        <th groups="sale.group_discount_per_so_line">%BON.</th>
                        <th groups="sale.group_discount_per_so_line">P. Neto</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.order_line" t-as="l">
                        <td style="max-width:70mm"><span t-raw="l.name[0:108]"/></td>
                        <td style="max-width:17mm;font-size:0.8em">
                            <span t-esc="', '.join(map(lambda x: x.description, l.tax_id))"/>
                        </td>
                        <td>
                            <span t-field="l.price_unit"/>
                        </td>
                        <td groups="sale.group_discount_per_so_line"><span t-field="l.discount"/></td>
                        <td groups="sale.group_discount_per_so_line">
                            <span t-field="l.price_net"/>
                        </td>                        
                        <td>
                            <span t-field="l.product_uom_qty"/>
                            <span t-field="l.product_uom"  groups="product.group_uom"/>
                        </td>
                        <td>
                            <span t-field="l.price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</template>

<!-- Printed Sale Order -->
<template id="report_ar_sale_order">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'l10n_ar_report_sale.report_ar_sale_order_document')"/>
        </t>
    </t>
</template>

</data>
</openerp>
