<!-- Printed Invoices -->
<template id="report_ar_receipt">
    <t t-call="report.html_container">
        <t t-set="data_report_margin_top" t-value="92"/>
        <t t-set="data_report_header_spacing" t-value="87"/>
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'l10n_ar_report_receipt.report_ar_receipt_document')"/>
        </t>
    </t>
</template>
